[
  {
    "id": "match_reminder",
    "subject": "Match Reminder: {{homeTeam}} vs {{awayTeam}}",
    "html": `
      <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;">
        <h2 style="color: #2c3e50;">üèÜ Upcoming Match Reminder</h2>
        
        <div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
          <h3 style="color: #e67e22; margin-bottom: 15px;">{{homeTeam}} vs {{awayTeam}}</h3>
          <p><strong>Date:</strong> {{matchDate}}</p>
          <p><strong>Stage:</strong> {{stage}}</p>
          <p><strong>Venue:</strong> {{venue}}</p>
        </div>

        <p>Don't miss this exciting match in the Pan-African Tournament! Click the button below to view match details.</p>

        <div style="text-align: center; margin: 30px 0;">
          <a href="{{matchUrl}}" style="background-color: #e67e22; color: white; padding: 12px 25px; text-decoration: none; border-radius: 5px; display: inline-block;">View Match Details</a>
        </div>

        <hr style="border: 1px solid #eee; margin: 30px 0;">

        <p style="font-size: 12px; color: #7f8c8d;">You received this email because you subscribed to match notifications. To unsubscribe, click <a href="{{unsubscribeUrl}}" style="color: #e67e22;">here</a>.</p>
      </div>
    `
  },
  {
    "id": "match_result",
